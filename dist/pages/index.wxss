.vpi {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  padding: 3.5% 3% 3.5% 4.5%;
  border-radius: 100%;
}
.vpi_y {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.4;
  background-color: black;
  border-radius: 100%;
}
.filmTop {
  background-image: linear-gradient(to top, rgba(100, 100, 100, 0), #000000);
  position: absolute;
  width: 100%;
  height: 31%;
  top: 0;
  z-index: 99;
  opacity: 0.6;
}
.filmBottom {
  background-image: linear-gradient(to bottom, rgba(100, 100, 100, 0), #000000);
  position: absolute;
  width: 100%;
  height: 18%;
  bottom: 0;
  z-index: 99;
  opacity: 0.6;
}
.videoText {
  position: absolute;
  width: 95%;
  padding-top: 2%;
  color: white;
  top: 0;
  text-align: left;
  z-index: 100;
  font-size: 34rpx;
  font-weight: 500;
}
.viewCount {
  position: absolute;
  padding: 0 0 2% 2%;
  color: white;
  left: 10rpx;
  bottom: 0;
  z-index: 100;
  font-size: 24rpx;
}
.duration {
  position: absolute;
  padding: 0 3% 2% 0;
  color: white;
  right: 10rpx;
  bottom: 0;
  z-index: 100;
  font-size: 24rpx;
}
.videoImage {
  height: 100%;
}
.backTop {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 20%;
  right: 5%;
  background-color: white;
  border-radius: 100%;
  z-index: 999;
}
.text-content-breif {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.share {
  width: 42rpx;
  height: 42rpx;
  padding: 10rpx;
}
.superMenuFloatBt {
  position: absolute;
  right: 0;
  top: 22%;
  background-color: #fbf195;
  border: 1rpx solid #aaaaaa;
  opacity: 0.8;
  padding: 3% 3%;
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
}
.shareBut {
  background-color: white;
  margin: 0;
}
.shareBut::after {
  border: 0;
}
